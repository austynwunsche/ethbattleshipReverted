@import 'nib'
@import 'rupture'
@import 'utils/common.styl'

global-reset()

fontOpenSans()
  font-family: 'Open Sans'
  font-weight: 400
  font-style: normal

*, html
  box-sizing border-box
  fontOpenSans()
  font-size 14px

h2
  word-break break-all
  font-size 1.5rem
  margin 0 0 1em

a
  color $linkColor
  text-decoration underline
  &:visited
  &:link
    color $linkColor
  &:hover
    background-color $linkColor
    color #fff
